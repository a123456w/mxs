<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerX="40%"
                android:centerY="0"
                android:endColor="@color/white"
                android:centerColor="#45c8ab7c"
                android:startColor="#45c8ab7c" />

            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="2dp"
        android:top="1dp">
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>
</layer-list>