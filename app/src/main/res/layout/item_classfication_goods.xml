<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/ll_contain"
            android:layout_toRightOf="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="标题"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="10"
                style="@style/color3_size14"
                />

            <TextView
                android:id="@+id/tv_describe"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/color666666_size12"
                android:lines="1"
                android:ellipsize="end"
                tools:text="空运直达，28mm果经，持续美味香甜..."/>

            <LinearLayout
                android:id="@+id/ll_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#15a4f4"
                    android:textSize="12sp"
                    android:text="会员价 ￥" />
                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#15a4f4"
                    android:textSize="14sp"
                    tools:text="68.88" />
                <TextView
                    android:id="@+id/tv_vip_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_color6"
                    tools:text="/盒"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tejia"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="10sp"
                android:background="@drawable/shape_tejia"
                android:textColor="#dd060e"
                android:padding="3dp"
                android:text="特价"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redColor"
                    android:textSize="14sp"
                    tools:text="￥15.00"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_color6"
                    tools:text="/盒"/>

                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    style="@style/color9_size12"
                    tools:text="￥15.00"/>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/ll_contain"
            android:src="@drawable/ic_add_home"
            android:layout_marginRight="9dp"
           />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_line"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>