<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="84dp"
    android:layout_height="84dp">


    <ImageView
        android:id="@+id/item_publish_pic_img_occupied"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:padding="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_camera"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_publish_pic_text_occupied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_publish_pic_img_occupied"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_publish_pic_img"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_publish_pic_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/close"
        android:visibility="gone" />

</RelativeLayout>