<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_dialog_item"
        android:layout_margin="3dp">
        <com.guo.qlzx.maxiansheng.util.costom.AutoFitTextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/tv_unit"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            tools:text="￥180.0"
            android:textSize="23sp"
            android:lines="1"
            android:textColor="@color/red_39"
            android:layout_weight="2.22"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="3dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="10"
                tools:text="标题"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:textColor="@color/text_color3"/>
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color9"
                android:textSize="11sp"
                tools:text="描述"
                android:lines="1"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>
