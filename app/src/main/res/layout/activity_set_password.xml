<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/yellow_ff"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_horn"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/orangeRed_ff"
            android:text="修改新交易密码后，原有交易密码失效"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/text_color3"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"
            android:inputType="number"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:maxLength="10"
            android:layout_weight="1"
            android:lines="1" />
        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:lines="1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="10dp"
            android:textColor="@color/selector_shop_category_text_color"
            android:textSize="14sp"
            android:enabled="true"
            android:text="获取验证码"/>
    </LinearLayout>

    <include layout="@layout/line_left"/>


    <EditText
        android:id="@+id/et_new"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/text_color3"
        android:textColorHint="@color/color_cccccc"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:hint="请输入密码，密码格式为6位数字"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:lines="1" />
    <include layout="@layout/line_left"/>

    <EditText
        android:id="@+id/et_again"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/text_color3"
        android:textColorHint="@color/color_cccccc"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:hint="请再次输入密码"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:lines="1" />
    <include layout="@layout/line_left"/>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_feedback_btn"
        android:text="确定"
        android:textSize="18sp"
        android:enabled="false"/>


</LinearLayout>
