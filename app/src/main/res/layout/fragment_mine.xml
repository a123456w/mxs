<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:background="@drawable/mine_bg"
                android:scaleType="fitXY" />

            <com.guo.qlzx.maxiansheng.util.costom.AutoFitTextView
                android:id="@+id/tv_plus_day"
                android:layout_width="97dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/title"
                android:layout_marginTop="35dp"
                android:background="@drawable/bg_plus_day"
                android:gravity="center_horizontal|bottom"
                android:lines="1"
                android:paddingBottom="5dp"
                android:text="剩余12天"
                android:textColor="@color/text_color6"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_set" />

                <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/iv_set"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="个人中心"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_center">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_message" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ba_red"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:lines="1"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        tools:text="9"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_icon"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_user_icon"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_center_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_head" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_comp"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@id/rl_icon"
                android:layout_marginTop="18dp"

                >

                <TextView
                    android:id="@+id/tv_login_and_register"
                    android:layout_width="140dp"
                    android:layout_height="34dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/loginandregister_bg"
                    android:gravity="center"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_mynickname"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:text="名字的撒范德萨范德萨范德萨发的撒范德萨范德萨的撒范德萨发大多数的" />

            </RelativeLayout>


            <View
                android:id="@+id/v_middle_bg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rl_comp"
                android:layout_marginTop="86dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/rl_comp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/shape_shade_ten"
                android:gravity="center"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:transformPivotX="0dp"
                android:transformPivotY="2dp">

                <LinearLayout
                    android:id="@+id/ll_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_techan_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"

                            android:background="@drawable/ic_yue" />
                        <!--    android:textColor="color/nwb_personal_setup_textcolor6"-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="我的资产"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_wode_fudai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_mytraure" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="8dp"
                            android:text="我的资产"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/textSize13" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_yuding_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"

                            android:background="@drawable/ic_caizi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="8dp"
                            android:text="我的菜籽"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_shangcheng_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_myfootprint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="我的足迹"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_middle_bg"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_shade_me"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:transformPivotX="0dp"
                android:transformPivotY="2dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_order"
                        android:drawablePadding="8dp"
                        android:text="我的订单" />

                    <TextView
                        android:id="@+id/tv_all_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/ic_toright"
                        android:text="查看全部订单" />

                </RelativeLayout>

                <include layout="@layout/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/ll_1_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_wait_pay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_waitpay"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="52dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="8dp"
                                android:text=" 待付款"
                                android:textColor="@color/nwb_personal_setup_textcolor6"
                                android:textSize="@dimen/textSize13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_send"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_daipeisong"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="8dp"
                                android:text="待配送"
                                android:textColor="@color/nwb_personal_setup_textcolor6"
                                android:textSize="@dimen/textSize13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_deliver"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_peisong"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="8dp"
                                android:text="待收货"
                                android:textColor="@color/nwb_personal_setup_textcolor6"
                                android:textSize="@dimen/textSize13"

                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wait_evalute"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_daipingjia"
                                android:scaleType="fitXY" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="8dp"

                                android:text="待评价"
                                android:textColor="@color/nwb_personal_setup_textcolor6"
                                android:textSize="@dimen/textSize13" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/number_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/ba_red"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="99"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/number_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/ba_red"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="99"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/number_fourthree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/ba_red"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="99"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/number_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/ba_red"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="99"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_order"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/shape_shade_me"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:transformPivotX="0dp"
                android:transformPivotY="2dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_tool"
                        android:drawablePadding="8dp"
                        android:text="必备工具" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/e5e5e5"/>

                <LinearLayout
                    android:id="@+id/ll_2_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:id="@+id/ll_wode_qianbao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"


                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_huiyuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="8dp"

                            android:text="会员中心"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/textSize13" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/e5e5e5"/>
                    <LinearLayout
                        android:id="@+id/ll_safety"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bule_ic_set_safety" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="8dp"
                            android:text="账户安全"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/textSize13" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/e5e5e5"/>

                    <LinearLayout
                        android:id="@+id/ll_wode_fankui"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_fankui" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="8dp"
                            android:text="意见反馈"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/textSize13" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/e5e5e5"/>
                    <LinearLayout
                        android:id="@+id/ll_kanfang_jilu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"


                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_invitate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="8dp"

                            android:text="邀请好友"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/textSize13" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/ll_tool" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>