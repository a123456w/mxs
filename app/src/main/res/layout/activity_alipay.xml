<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:text="请绑定支付宝账号"
        android:textColor="@color/text_color6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:textColor="@color/text_color3"
            android:text="姓名"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/text_color3"
            android:textColorHint="@color/text_color6"
            android:textSize="13sp"
            android:visibility="visible"
            android:hint="请输入用户真实姓名"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/text_color3"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:visibility="gone"
            android:singleLine="true"
            />
    </LinearLayout>
    <include layout="@layout/line_left"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:textColor="@color/text_color3"
            android:text="账号"
            />
        <EditText
            android:id="@+id/et_accounts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/text_color3"
            android:textColorHint="@color/text_color6"
            android:textSize="13sp"
            android:hint="请输入支付宝账号"
            android:singleLine="true"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/tv_accounts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/text_color3"
            android:textSize="13sp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:singleLine="true"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="153dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="完 成"
        android:textColor="@color/white"
        android:enabled="false"
        android:textSize="18sp"
        android:background="@drawable/selector_feedback_btn"/>
</LinearLayout>
