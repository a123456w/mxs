<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="输入密码"
            android:textColor="@color/text_color3"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingLeft="16dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancel"/>
    </RelativeLayout>
    <include layout="@layout/line"/>
    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="16dp"
        app:gpvTextColor="@color/black"
        app:gpvTextSize="20sp"
        app:gpvLineColor="@color/gray_d2"
        app:gpvLineWidth="1dp"
        app:gpvGridColor="#ffffff"
        app:gpvPasswordLength="6"
        app:gpvPasswordType="numberPassword"/>


    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/blue_15"
        android:layout_marginTop="15dp"
        android:text="忘记密码?"
        android:gravity="right"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="40dp"/>
    <include layout="@layout/line"/>
    <com.guo.qlzx.maxiansheng.util.costom.PasswordKeyboardView
        android:id="@+id/view_keyboard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/line_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@color/white"
        android:keyTextColor="@color/black"
        android:shadowColor="@color/line_color"
        android:shadowRadius="0"
        app:pkvDeleteBackgroundColor="#d2d2d2"
        app:pkvDeleteDrawable="@drawable/ic_number_delete"/>
</LinearLayout>