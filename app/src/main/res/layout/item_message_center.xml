<?xml version="1.0" encoding="utf-8"?>
<com.guo.qlzx.maxiansheng.util.costom.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        app:layout_itemType="main"
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_inform"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="15dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_new"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@color/redColor"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                android:visibility="invisible"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_new"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="通知消息"
                    android:lines="1"
                    android:maxWidth="250dp"
                    android:textColor="@color/text_color3" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:lines="1"
                    android:gravity="right"
                    android:textColor="@color/text_color6"
                    tools:text="12/12/3"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_new"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color6"
                android:textSize="13sp"
                tools:text="123"/>
        </RelativeLayout>
        <include layout="@layout/line_left"/>
    </LinearLayout>
     <Button
         app:layout_itemType="menu"
         android:layout_width="60dp"
         android:id="@+id/btn_delete"
         android:textColor="@color/white"
         android:textSize="16sp"
         android:text="删除"
         android:background="@color/blue_15"
         android:layout_height="match_parent" />
</com.guo.qlzx.maxiansheng.util.costom.SwipeItemLayout>
