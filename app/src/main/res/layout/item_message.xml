<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_system"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">


        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_system"
                android:layout_centerVertical="true"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_new"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@color/redColor"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rl_img"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="通知消息"
                android:lines="1"
                android:maxWidth="250dp"
                android:textColor="@color/text_color3" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:gravity="right"
                android:textColor="@color/text_color6"
                tools:text="12/12/3"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_below="@id/ll_system"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/rl_img"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color6"
            android:textSize="13sp"
            tools:text="123"/>
    </RelativeLayout>
    <include layout="@layout/line_left"/>
</LinearLayout>
