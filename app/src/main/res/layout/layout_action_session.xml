<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <View
                android:layout_width="43dp"
                android:layout_height="1dp"
                android:background="@color/blue_15"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_15"
                android:text="团购专场"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="43dp"
                android:layout_height="1dp"
                android:background="@color/blue_15"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="@color/text_color3"
            android:text="P R E S A L E  S P E C I A L"
            android:background="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_margin="13dp"
            android:background="@drawable/bg_shade">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/iv_ad"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                app:riv_corner_radius="13dp"
                app:riv_mutate_background="true"
                app:riv_tile_mode="clamp"
                app:riv_oval="false"
                />
        </RelativeLayout>
        <com.android.yzl.lib.PullLeftToRefreshLayout
            android:id="@+id/plrl"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/hlv_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>

        </com.android.yzl.lib.PullLeftToRefreshLayout>
    </LinearLayout>

</LinearLayout>
