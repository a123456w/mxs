<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:background="@drawable/shape_vip_gold">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_vip_white">
                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/riv_img" />
                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color3"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/riv_img"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    tools:text="123***4567"/>
                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gold_c8"
                    android:layout_below="@id/tv_mobile"
                    android:layout_toRightOf="@id/riv_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="plus会员"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                   android:layout_alignParentBottom="true"
                    android:background="@color/gold_bg_c8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color6"
                        android:textSize="14sp"
                        android:text="菜籽数量"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gold_c8"
                        tools:text="1000"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:lines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_daytitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color6"
                        android:textSize="14sp"
                        android:text="剩余时间"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gold_c8"
                        tools:text="0天"
                        android:layout_marginLeft="15dp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:background="@color/gold_c8"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color6"
                    android:textSize="16sp"
                    android:layout_marginLeft="6dp"
                    android:text="Plus会员特权"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
              <LinearLayout
                  style="@style/LinearLayoutMemberCenter"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="11dp">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="24dp"
                      android:layout_marginTop="17dp"
                      android:src="@drawable/ic_economize"/>
                  <TextView
                      android:text="Plus会员专享价"
                      style="@style/TextMemberCenter"/>
              </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="11dp"
                    style="@style/LinearLayoutMemberCenter">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/ic_double"/>
                    <TextView
                        style="@style/TextMemberCenter"
                        android:text="Plus会员双倍积分" />
                </LinearLayout>
                <LinearLayout
                    style="@style/LinearLayoutMemberCenter"
                    android:layout_marginRight="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/ic_appreciation"/>
                    <TextView
                        style="@style/TextMemberCenter"
                        android:text="会员享受增值服务" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hlv_vip"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_vip_gold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@color/gold_c8"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color6"
                android:textSize="16sp"
                android:layout_marginLeft="6dp"
                android:text="Plus会员热卖商品"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
