<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@drawable/shape_set_out_white"
        android:layout_margin="2dp">
        <ImageView
            android:id="@+id/iv_kill_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_kill_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_alignTop="@id/iv_kill_img"
            android:layout_toRightOf="@id/iv_kill_img"
            tools:text="鱼我所欲也"
            android:layout_marginLeft="7dp"
            android:textSize="14sp"
            android:textColor="@color/text_color3"
            />

        <TextView
            android:id="@+id/tv_kill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kill_title"
            android:layout_toRightOf="@id/iv_kill_img"
            android:layout_marginTop="6dp"
            android:lines="1"
            tools:text="￥15.00"
            android:textSize="17sp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/redColor"/>
        <TextView
            android:id="@+id/tv_kill_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_kill_price"
            android:layout_marginTop="6dp"
            android:layout_alignBottom="@id/tv_kill_price"
            android:lines="1"
            tools:text="/箱"
            android:textColor="@color/text_color6"
            android:textSize="12sp"/>
    </RelativeLayout>

</RelativeLayout>
