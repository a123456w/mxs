<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <ImageView
            android:id="@+id/goods_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_goods_defout" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="广西百香果热带新鲜水果现摘西番莲鸡蛋果5斤精装大..."
                    android:textColor="@color/text_color3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_plus_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:id="@+id/tv_new_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#dd060e"
                        tools:text="￥12.00"/>
                </LinearLayout>


            </LinearLayout>
                <LinearLayout
                    android:id="@+id/rlc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/jjl"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/goods_spec"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        tools:text="规格：4个/盒"
                        android:textColor="@color/text_color6"
                        android:textSize="12sp" />

                        <TextView
                            android:id="@+id/goods_price"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"                            style="@style/color666666_size12"
                            tools:text="单价：￥18.00/盒" />

                        <TextView
                            android:id="@+id/goods_num"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"                            style="@style/color666666_size12"
                            tools:text="数量：1盒" />

                </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/value_added_service"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="增值服务"
            android:textColor="@color/text_color3"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_service"
            android:drawableLeft="@drawable/ic_checked"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="清洗：0.5元/kg"
            android:textColor="@color/text_color3"
            android:textSize="13sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="45dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/goods_total_price"
            android:gravity="center_vertical"
            android:text="小计： "
            android:textColor="@color/text_color3"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goods_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="￥18.00"
            android:textColor="@color/redColor"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F2F2F2" />


</LinearLayout>