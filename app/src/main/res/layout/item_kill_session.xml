<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_img"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color3"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            tools:text="标题"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color6"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:text="酸           甜爽口                                    多汁饱满"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/redColor"
                tools:text="￥13"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_new_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="12sp"
                android:textColor="@color/text_color6"
                tools:text="/盒"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color9"
            android:text="￥12"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/line_left"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_btn"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="立即抢购"
        android:textColor="@color/white"
        android:background="@drawable/shape_search_item_blue"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color6"
            android:textSize="11sp"
            android:text="已秒13%"
            android:layout_marginRight="5dp"/>
        <ProgressBar
            android:id="@+id/pb_rate"
            android:layout_width="75dp"
            android:layout_height="6dp"
            android:progress="13"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar"/>
        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cdv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:isHideTimeBackground="true"
            app:timeBgColor="@color/blue_15"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:timeTextColor="@color/blue_15"
            app:timeTextSize="12sp"
            app:isTimeTextBold="true"
            app:suffixGravity="center"
            app:suffixTextColor="@color/blue_15"
            app:suffixTextSize="12sp"/>
    </LinearLayout>

</RelativeLayout>
