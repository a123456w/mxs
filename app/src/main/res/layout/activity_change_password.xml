<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        style="@style/LinearLayoutSetMain">
        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAddressMain"
            android:text="手机号" />
        <TextView
            android:id="@+id/et_tel"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color3"/>
    </LinearLayout>
    <include layout="@layout/line_left"/>
    <LinearLayout
        style="@style/LinearLayoutSetMain">
        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAddressMain"
            android:text="验证码" />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:inputType="number"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:maxLength="10"
            android:textColor="@color/text_color3"/>
        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/selector_shop_category_text_color"
            android:textSize="14sp"
            android:text="获取验证码"
            android:background="@color/white"
            android:gravity="center"
            android:lines="1"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <include layout="@layout/line_left"/>
    <LinearLayout
        style="@style/LinearLayoutSetMain">
        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAddressMain"
            android:text="输入密码" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入新的密码"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color3"
            android:inputType="textPassword" />
    </LinearLayout>
    <include layout="@layout/line_left"/>
    <LinearLayout
        style="@style/LinearLayoutSetMain">
        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/TextAddressMain"
            android:text="重复密码" />
        <EditText
            android:id="@+id/et_again"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请重新输入密码"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color3"/>
    </LinearLayout>
    <include layout="@layout/line_left"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cash_blue_shade"
        android:textColor="@color/white"
        android:text="确 定"
        android:layout_margin="15dp" />
</LinearLayout>
